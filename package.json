{
  "name": "electro-cell",
  "productName": "electro-cell",
  "version": "3.0.0",
  "description": "A cellular automat written in electron typescript.",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "test": "mocha -r ts-node/register src/**/*spec.ts"
  },
  "keywords": [],
  "author": {
    "name": "Thomas Volk (MacBook)",
    "email": "info@thomasvolk.de"
  },
  "license": "Apache-2.0",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electro_cell"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-webpack": "^7.9.0",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/bootstrap": "^5.2.10",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "chai": "^6.0.1",
    "css-loader": "^7.1.2",
    "electron": "38.1.2",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "mocha": "^11.7.2",
    "node-loader": "^2.1.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/jquery": "^3.5.33",
    "bootstrap": "^5.3.8",
    "cellular-automat": "^2.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "jquery": "^3.7.1",
    "popper.js": "^1.16.1",
    "yarn": "^1.22.22"
  }
}
